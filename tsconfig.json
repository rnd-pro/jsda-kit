{
  "compilerOptions": {
    "pretty": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
        "ESNext",
        "ESNext.Array",
        "DOM",
        "DOM.Iterable",
        "WebWorker"
      ],
    "allowJs": true,
    "checkJs": true,
    "strict": false,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "noEmit": true
  },
  "include": [
    "**/*.js"
  ]
}